accent = #4A90E2

.accordion
	list-style none
	margin 30px 0
	padding 0

	
	> li
		list-style none
		overflow hidden
		margin 0
		padding 0

		> .aHeading
			position relative
			margin 0
			font-weight 100
		
			a
				display block
				padding 20px 30px 20px 10px
				color accent
				transition all .2s linear
		
				&:after
					display block
					content ' '
					position absolute
					right 10px
					height 0
					width 0
					font-size 0
					line-height 0
					border-width 5px
					border-style solid
					border-color transparent
					border-top-color accent
					transform-origin center 25%
					transition all .1s linear
					top 50% - @border-width
				
				&:focus,
				&:hover
					background rgba(accent, .05)
					transition all .2s linear
				
		+ li
		
			> h3
				border-top 1px solid #DDD
		
		> .aPanel
			padding 20px 10px
		
		&.active
		
			> h3
			
				a
					color black
					transition all .2s linear
				
					&:after
						border-top-color black
						transform scaley(-1)
						transition all .1s linear